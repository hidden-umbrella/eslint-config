{
  "name": "@hidden-umbrella/eslint-config",
  "version": "1.0.0",
  "main": "src/index",
  "author": "ArtieFuzzz#8298",
  "license": "MIT",
  "private": false,
  "description": "TypeScript ESLint config for various projects",
  "scripts": {
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "build": "yarn clean && yarn build:ts",
    "build:ts": "tsc -p ./",
    "clean": "rimraf ./dist && mkdir dist",
    "doc:gen": "typedoc",
    "prepare": "husky install .github/husky",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.9.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.21.9",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": ">=15",
    "npm": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hidden-umbrella/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/hidden-umbrella/eslint-config/issues"
  },
  "files": [
    "src"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0"
  }
}
